<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_date_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/shift_date"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/text_shift_date_picker"
        android:layout_width="215dp"
        android:layout_height="49dp"
        android:layout_marginLeft="109dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:hint="@string/hint_enter_date"
        android:textSize="16sp"
        app:layout_constraintHorizontal_bias="0.896"
        app:layout_constraintLeft_toRightOf="@+id/text_date_heading"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="109dp"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/text_start_time_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="38dp"
        android:text="@string/time_start"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_date_heading"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/text_start_time_picker"
        android:layout_width="216dp"
        android:layout_height="47dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:hint="@string/hint_enter_start_time"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_shift_date_picker"
        app:layout_constraintLeft_toRightOf="@+id/text_start_time_heading"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/text_end_time_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time_end"
        android:textSize="16sp"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/text_start_time_heading"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/text_end_time_picker"
        android:layout_width="216dp"
        android:layout_height="47dp"
        android:hint="@string/hint_no_end_time"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/text_start_time_picker"
        app:layout_constraintLeft_toRightOf="@+id/text_end_time_heading"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="8dp"/>

    <fragment
        android:id="@+id/map"
        android:layout_width="0dp"
        android:layout_height="200dp"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/text_end_time_picker"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_text_save"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="85dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/button_cancel"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.214"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="85dp"/>

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/button_text_cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="85dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="85dp"/>

</android.support.constraint.ConstraintLayout>